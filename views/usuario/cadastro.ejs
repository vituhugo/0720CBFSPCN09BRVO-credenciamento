<%- include('../partials/header') -%>
<form class="col-8 offset-2" action="/usuario/guardar" method="POST" >
    <div class="card">
        <div class="card-header">
            <h2 class="card-title mb-0">Novo usu√°rio</h2>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label>Nome Completo</label>
                        <input class="form-control" name="nome" placeholder="Exemplo da silva" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label class="d-block">Genero</label>

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="sexo" id="rdb-homem" value="M">
                            <label class="form-check-label" for="rdb-homem">
                                Masculino
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="sexo" id="rdb-mulher" value="F">
                            <label class="form-check-label" for="rdb-mulher">
                                Feminino
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label class="d-block">Sexo</label>

                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="tipo" id="ckb-comprador" value="comprador">
                            <label class="form-check-label" for="ckb-comprador">
                                Comprador
                            </label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="checkbox" name="tipo" id="ckb-vendedor" value="vendedor">
                            <label class="form-check-label" for="ckb-vendedor">
                                Vendedor
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label>Email</label>
                        <input class="form-control" name="email" type="email" placeholder="exemplo@exemplo.com" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <label>Senha</label>
                        <input class="form-control" placeholder="Digite sua senha..." name="senha" type="password" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <button class="btn btn-primary">Salvar</button>
        </div>
    </div>
</form>
<%- include('../partials/footer') -%>